@{
    ViewData["Title"] = "Session Workshop - Dashboard";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between">
        <div class="bb-1">
            <h2>Welcome @Context.Session.GetString("FirstName")</h2>
        </div>
        <div>
            <form action="logout" method="POST">
                <button class="btn btn-primary"> Logout </button>
            </form>
        </div>
    </div>
        <div class="text-center">
            @Context.Session.GetInt32("Counter")
        </div>
            <div class="d-flex justify-content-between w-50 m-3">
                <form action="process/count" method="POST">
                    <input type="hidden" name="countVar" value="1" />
                    <button class="btn btn-primary"> +1 </button>
                </form>
                <form action="process/count" method="POST">
                    <input type="hidden" name="countVar" value="2" />
                    <button class="btn btn-primary"> +2 </button>
                </form>
            </div>
            <div class="d-flex justify-content-between w-50 m-3">
                <form action="process/count" method="POST">
                    <input type="hidden" name="countVar" value="-1" />
                    <button class="btn btn-primary"> -1 </button>
                </form>
                <form action="process/count" method="POST">
                    <input type="hidden" name="countVar" value="random" />
                    <button class="btn btn-primary"> +2 </button>
                </form>
            </div>
</div>